<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black"
    >


    <TextView
        android:id="@+id/introTxt1"
        android:layout_width="163dp"
        android:layout_height="268dp"
        android:layout_above="@+id/txt_main"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="76dp"
        android:layout_toStartOf="@+id/introTxt2"
        android:fontFamily="@font/andada"
        android:text="finde"
        android:textColor="@color/yellow"
        android:textSize="65sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/introTxt2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/introTxt2" />

    <TextView
        android:id="@+id/introTxt2"
        android:layout_width="56dp"
        android:layout_height="105dp"
        android:layout_above="@+id/startBtn"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="127dp"
        android:fontFamily="@font/andada"
        android:text="@string/r"
        android:textColor="@color/yellow"
        android:textSize="85sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/introTxt1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/startBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="176dp"
        android:layout_toEndOf="@+id/txt_main"
        android:background="@color/black"
        android:clickable="true"
        android:focusable="true"
        android:onClick="direct_user"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_main"
        app:layout_constraintTop_toBottomOf="@+id/introTxt1"
        app:layout_constraintVertical_bias="0.486"
        app:srcCompat="@drawable/arrow_circle_right" />

    <TextView
        android:id="@+id/txt_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="195dp"
        android:fontFamily="@font/andada"
        android:text="Start browsing"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/startBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/introTxt1"
        app:layout_constraintVertical_bias="0.0" />


</RelativeLayout>